<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @user.name %></dd>

      <dt>Aadhaar</dt>
      <dd><%= @user.aadhaar_id %></dd>

      <dt>Dob</dt>
      <dd><%= @user.dob %></dd>

      <dt>No of childs</dt>
      <dd><%= @user.no_of_childs %></dd>

      <dt>Gender</dt>
      <dd><%= @user.gender %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
      <a href="/users/<%= @user.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_user/<%= @user.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
